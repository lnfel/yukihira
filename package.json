{
	"name": "yukihira-2024",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"postbuild": "node --import tsx/esm ./scripts/postbuild.ts",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"gh:deploy": "pnpm build && pnpm gh-pages -d build -t true",
		"pwa:assets:generate": "pwa-assets-generator --preset minimal static/yukihira-logo.png"
	},
	"devDependencies": {
		"@playwright/test": "^1.50.1",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.17.1",
		"@sveltejs/vite-plugin-svelte": "^4.0.4",
		"@types/node": "^20.17.17",
		"@vite-pwa/assets-generator": "^0.2.6",
		"autoprefixer": "^10.4.20",
		"gh-pages": "^6.3.0",
		"postcss": "^8.5.1",
		"svelte": "5.19.7",
		"svelte-check": "^3.8.6",
		"tailwindcss": "^3.4.17",
		"tslib": "^2.8.1",
		"tsx": "^4.19.2",
		"typescript": "^5.7.3",
		"vite": "^5.4.14"
	},
	"type": "module",
	"dependencies": {
		"crayon.js": "^3.3.3",
		"lamy-debugbar": "1.0.0-next.1",
		"short-unique-id": "^5.2.0"
	},
    "pnpm": {
		"peerDependencyRules": {
			"allowedVersions": {
				"@twind/core>typescript": "5",
				"@twind/preset-autoprefix>typescript": "5",
				"@twind/preset-tailwind>typescript": "5",
				"@twind/with-sveltekit>typescript": "5",
                "@twind/with-sveltekit>@sveltejs/kit": "2"
			}
		}
	}
}
